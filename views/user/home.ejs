    <meta name="description" content="Colo Shop Template" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="stylesheet"
      type="text/css"
      href="/user/styles/bootstrap4/bootstrap.min.css"
    />
    <link
      href="/user/plugins/font-awesome-4.7.0/css/font-awesome.min.css"
